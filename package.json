{
    "name": "@methodus/server",
    "version": "2.0.13",
    "description": "Server components for @methodus workflow",
    "main": "index.js",
    "directories": {
        "test": "tests",
        "examples": "examples"
    },
    "keywords": [
        "methodus",
        "unified application framework",
        "microservice",
        "rpc",
        "eventsourcing",
        "agnostic",
        "independent",
        "framework",
        "typescript",
        "bind",
        "application"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodulusteam/-methodus-server"
    },
    "scripts": {
        "build": "tsc",
        "tslint": "tslint -c tslint.json 'src/**/*.ts'",
        "test": "npm run build && nyc --reporter=lcov --reporter=html npm run xtest && nyc report",
        "test:servers": "npm run build &&  set test='true'&alsatian src/tests/servers.spec.js",
        "test:events": "npm run build &&  set test='true'&alsatian src/tests/events.spec.js",
        "test:gateway": "npm run build &&  set test='true'&alsatian src/tests/gateway.spec.js",
        "xtest": "set NODE_LOG_LEVEL=trace  test='true'&alsatian src/tests/servers.spec.js src/tests/gateway.spec.js src/tests/events.spec.js src/tests/decorators.spec.js src/tests/fp.spec.js",
        "test:fp": "npm run build &&  set test='true'&alsatian src/tests/fp.spec.js",
        "servers": "tsc && alsatian src/tests/servers.spec.js ",
        "check-coverage": "nyc --reporter=lcov --reporter=html npm run test && nyc report"
    },
    "author": "Roi ben-haim",
    "license": "ISC",
    "dependencies": {
        "amqplib": "^0.5.1",
        "body-parser": "^1.17.2",
        "colors": "^1.1.2",
        "consolidate": "^0.15.0",
        "correlation-id": "^2.0.0",
        "debug": "^2.6.8",
        "ejs": "^2.5.7",
        "errorhandler": "^1.5.0",
        "etag": "^1.8.1",
        "express-fileupload": "^1.0.0",
        "fastify": "^1.12.1",
        "figlet": "^1.2.0",
        "js-yaml": "^3.9.0",
        "kafka-node": "^2.2.0",
        "kill-port": "^1.3.2",
        "logelas": "^3.0.10",
        "method-override": "^2.3.9",
        "mkdirp": "^0.5.1",
        "mock-require": "^2.0.2",
        "request": "^2.81.0",
        "request-promise-native": "^1.0.4",
        "shortid": "^2.2.8",
        "socket.io-client": "^2.0.3",
        "stream-from-promise": "^1.0.0",
        "uuid": "^3.1.0"
    },
    "optionalDependencies": {
        "compression": "^1.7.0",
        "cookie-parser": "^1.4.3",
        "express": "^4.15.3",
        "redis": "^2.7.1",
        "socket.io": "^2.0.3"
    },
    "devDependencies": {
        "@methodus/data": "^1.0.3",
        "@methodus/describe": "^2.0.0",
        "@types/node": "^10.0.0",
        "alsatian": "^2.0.0",
        "child-process-debug": "0.0.7",
        "nedb": "^1.8.0",
        "nedb-promise": "^2.0.1",
        "nyc": "^13.1.0",
        "redis-mock": "^0.19.0",
        "reflect-metadata": "^0.1.10",
        "sinon": "^7.0.0",
        "supertest": "^3.0.0",
        "tslint": "^5.11.0",
        "typescript": "^3.1.3"
    }
}
